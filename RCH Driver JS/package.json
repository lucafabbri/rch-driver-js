{
  "name": "rch-driver-js",
  "version": "1.0.0-rc.2",
  "description": "RCH Driver for Javascript",
  "main": "dist/esm/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/esm/plugin.js",
  "scripts": {
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "docs": "jsdoc2md --plugin dmd-bitbucket -t README.hbs --files src/*.ts src/**/*.ts --configure jsdoc2md.json > ../README.md",
    "build": "npm run clean && npx ctix create ./tsconfig.json && tsc -p ./tsconfig.json --downlevelIteration && tsc -p ./tsconfig.test.json --downlevelIteration && rollup -c rollup.config.js",
    "clean": "rimraf ./dist && rm -rf ./test/*.js && rm -rf ./test/*.d.ts && rm -rf ./test/*.map",
    "watch": "tsc --watch",
    "test": "mocha -R spec test/**/*Test.js 2>&1 | tee report",
    "prepublishOnly": "npm run build",
    "pub": "yarn publish --registry https://repo.rchrnd.com/repository/npm-hosted"
  },
  "author": "Luca Fabbri <l.fabbri@rch.it>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@types/mocha": "^9.0.0",
    "ctix": "^0.4.0",
    "dmd-bitbucket": "^0.1.10",
    "eslint": "^7.11.0",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.0",
    "mocha": "^9.1.3",
    "prettier": "~2.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "ts-mocha": "^8.0.0",
    "typescript": "~4.0.3"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://lfabbri@bitbucket.org/rch-group/rch-driver-js"
  },
  "bugs": {
    "url": "https://lfabbri@bitbucket.org/rch-group/rch-driver-js/issues"
  },
  "dependencies": {
    "@rollup/plugin-inject": "^4.0.3",
    "@types/lodash": "^4.14.178",
    "@types/luxon": "^2.0.8",
    "@types/node": "^16.0.0",
    "@types/serialport": "^8.0.2",
    "local-devices": "^3.2.0",
    "lodash": "^4.17.21",
    "luxon": "^2.3.0",
    "path": "^0.12.7",
    "serialport": "^9.2.8"
  }
}
